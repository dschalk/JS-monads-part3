const monad = h('pre', {style: {color: '#AFEEEE' }}, `  class Monad {
    constructor(z,g) {

      this.x = z;
      if (arguments.length === 1) {this.id = 'anonymous'}
      else {this.id = g}

      this.bnd = (func, ...args) => {
        func(this.x, ...args);
      };

      this.ret = a => {
        var str = this.id
        if (str === 'anonymous') {return new Monad(a,'anonymous')};
        eval(str + '= new Monad(a,' + "str" + ')'); 
        return window[this.id];
      };

      this.fmap = (f, mon = this, ...args) => {      
        mon.ret( f(mon.x, ...args));
        return mon;

      };
    }
  };
` );  
  
const monadIter = h('pre', {style: {color: '#AFEEEE' }}, `  class MonadIter {
    constructor(z,g) {

      this.x = z;
      this.id = g;
      this.flag = false;
      this.p = [];

      this.block = () => {
        this.flag = true;
        return this;
        }

      this.release = () => {
        let self = this;
        let p = this.p;
        p[0](self.x, ...p[1]);
        self.flag = false;
        return self;
      }
 
      this.bnd = (func, ...args) => {
        let self = this;
        if (self.flag === false) {
          func(self.x, ...args);
          return self;
        }
        if (self.flag === true) {
          self.p = [func, args];
          return self;
        }
      }
    }
  }
` );  

