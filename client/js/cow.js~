const pause = h('pre', {style: {color: '#AFEEEE' }}, 
`  var pause = function(x,t,mon2) {
    mon2.block();
    let time = t*1000;
    setTimeout( function() {
      mon2.release();
    },time );
    return mon2;
  };
`
);

const pauseDemo = h('pre', {style: {color: '#AFEEEE' }}, 
`  function updatePauseDemo() {
    mM1.ret("Wait two seconds.")
      .bnd(update)
      .bnd(pause,2,mMZ1)
      .bnd(() => mM1.ret("Goodbye")
      .bnd(update)))
  }
`
);  

